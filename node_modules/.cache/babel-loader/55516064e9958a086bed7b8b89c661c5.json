A,UAAA,CAAA,KAAA,CAAA,KAAA,IAAA,CAAA,KAAA,CAAA,EAAA;AACA,aAAA,IAAA,CAAA,KAAA,GAAA,MAAA,CAAA,KAAA,IAAA,CAAA,KAAA,CAAA,GAAA,CAAA;AACA;;AACA,WAAA,QAAA;AACA,KApBA;;AAqBA,IAAA,QAAA,GAAA;AACA,UAAA,CAAA,KAAA,CAAA,KAAA,IAAA,CAAA,KAAA,CAAA,IAAA,KAAA,IAAA,CAAA,KAAA,IAAA,CAAA,IAAA,KAAA,IAAA,CAAA,IAAA,IAAA,EAAA,IAAA,KAAA,IAAA,CAAA,IAAA,CAAA,MAAA,IAAA,CAAA,EAAA;AACA,aAAA,KAAA,GAAA,IAAA;AACA,OAFA,MAGA;AACA,aAAA,KAAA,GAAA,KAAA;AACA;AACA;;AA5BA,GArBA;;AAoDA,EAAA,OAAA,GAAA;AACA;AACA,SAAA,OAAA,CAAA,KAAA,MAAA,CAAA,MAAA,CAAA,EAAA;AACA,GAvDA;;AAwDA,EAAA,QAAA,EAAA;AACA,IAAA,IAAA,GAAA;AACA,aAAA,KAAA,MAAA,CAAA,KAAA,CAAA,IAAA;AACA;;AAHA;AAxDA,CAAA","sourcesContent":["<template>\n  <div class=\"form-wrapper\">\n    <!-- Display item when it is submitted and there is no error in the server request -->\n    <div class=\"text-center\" v-if=\"edited && !this.$store.state.error\">\n      <h2><span class=\"glyphicon glyphicon-check\" style=\"color: green;\"></span> Your item has been updated!</h2>\n      <div class=\"details\">\n        <h4>Item details</h4>\n        <img :src=\"item.img\" height=\"250\" width=\"250\" style=\"border-radius: 30px;\">\n        <p><strong>Name:</strong> {{item.name}}</p>\n        <p><strong>quantity:</strong> {{item.order}}</p>\n      </div>\n      <router-link to=\"/\">\n      <btn class=\"btn btn-success\">Go to homepage</btn>\n      </router-link>\n    </div>\n\n    <form v-else>\n      <!--Text fields for input name and image url-->\n      <img :src=\"item.img\" height=\"250\" width=\"250\" style=\"border-radius: 30px;\">\n      <div class=\"form-group\" style=\"text-align: center;\">\n        <label for=\"name\">Name: <span style=\"color: red;\">*</span></label>\n        <input class=\"form-control myInput\" id=\"name\" label=\"Name\" :placeholder=\"item.name\" required v-model=\"item.name\" style=\"max-width: 400px;\" v-on:keyup=\"checkAll\">\n      </div>\n      <div class=\"form-group\" style=\"text-align: center;\">\n        <label for=\"img\"><span class=\"glyphicon glyphicon-link\"></span> Image URl: </label>\n        <input class=\"form-control myInput\" id=\"img\" label=\"Image url\" :placeholder=\"item.img\" v-model=\"item.img\" style=\"max-width: 400px;\" v-on:keyup=\"checkAll\">\n      </div>\n        <!-- Field for choosing quantity-->\n      <div class=\"form-group\" style=\"text-align: center;\">\n        <label for=\"quant\">Quantity: <span style=\"color: red;\">*</span></label>\n        <div class=\"input-group\" id=\"quant\">\n          <input type=\"button\" value=\"-\" class=\"btn btn-success\" data-field=\"quantity\" v-on:click=\"decrementQuantity\">\n          <input type=\"text\" step=\"1\" max=\"50\" value=\"1\" name=\"quantity\" id=\"quantField\" v-model=\"item.order\" v-on:keyup=\"checkAll\">\n          <input type=\"button\" value=\"+\" class=\"btn btn-danger\" data-field=\"quantity\" v-on:click=\"incrementQuantity\">\n        </div>\n      </div>\n\n      <br>\n      <btn @click=\"submit\" :disabled=\"!valid\" class=\"btn btn-success myInput btn-block\">Submit</btn>\n    </form>\n    <br><br>\n  </div>\n</template>\n\n\n<script>\nimport { mask } from 'vue-the-mask';\nimport { mapActions } from 'vuex';\nexport default {\n  name: \"Form\",\n  directives: {\n    mask,\n  },\n  data: () => {\n    return {\n      //current form values\n      edited: false,\n      valid: true,\n      //check if name is not empty and if it is type name is required\n      nameRules: [\n        (name) => !!name || 'Name is required',\n        (name) => name.length > 2 || 'Name must be longer than 2 characters',\n      ],\n      sliderRules: [\n        v => v <= 10 || \"you can't afford more than 10!\",\n      ],\n\n    };\n  },\n  methods: {\n    //on submit function\n    submit() {\n      this.editItem(this.item);\n      this.edited = true;\n    },\n    ...mapActions([\"addToItems\"]),\n    ...mapActions([\"getItem\"]),\n    ...mapActions([\"editItem\"]),\n    decrementQuantity(){\n      if(!isNaN(this.item.order) && this.item.order > 1 ) {\n        this.item.order = Number(this.item.order) - 1;\n      }\n      this.checkAll();\n    },\n    incrementQuantity(){\n      if(!isNaN(this.item.order)) {\n        this.item.order = Number(this.item.order) + 1;\n      }\n      this.checkAll();\n    },\n    checkAll(){\n      if(!isNaN(this.item.order) && this.item.order >= 1 && this.item.name != \"\" && this.item.name.length >= 3){\n        this.valid = true;\n      }\n      else{\n        this.valid = false;\n      }\n    }\n\n  },\n  created(){\n    //get the specific requested item in route from the store\n    this.getItem(this.$route.params.id);\n  },\n  computed: {\n    item(){\n      return this.$store.state.Item;\n    }\n  }\n\n};\n</script>\n\n<style scoped>\n.form-wrapper {\n  padding: 30px;\n}\n.details {\n  padding-top: 20px;\n}\nh4 {\n  padding-bottom: 20px;\n  color: #6699cc;\n}\n.myInput{\n  margin: 0 auto;\n  display: block;\n}\n#quantField{\n  max-width: 50px;\n  text-align: center;\n}\n#quantField:focus{\n  box-shadow: none;\n  border: none;\n}\n.input-group {\n  clear: both;\n  margin: 15px 0;\n  position: relative;\n  display: block;\n}\n\n.input-group input[type='button'] {\n  min-width: 35px;\n  width: auto;\n  transition: all 300ms ease;\n}\n\ninput[type=\"number\"] {\n  -moz-appearance: textfield;\n  -webkit-appearance: none;\n}\n\n</style>"],"sourceRoot":"src/views"}]}